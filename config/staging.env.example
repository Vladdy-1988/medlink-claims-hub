# MedLink Claims Hub - Staging Environment Configuration
# Copy this file to .env.staging and fill in the actual values
# WARNING: Never commit .env.staging with actual values to version control

# Database Configuration
DATABASE_URL=

# Security Keys (CRITICAL: Generate strong random keys for production)
# Use: openssl rand -hex 32
ENCRYPTION_KEY=
# IMPORTANT: MUST BE DIFFERENT from ENCRYPTION_KEY
# Use: openssl rand -hex 32
HASH_KEY=
JWT_SECRET=

# Sentry Error Monitoring (optional)
SENTRY_DSN=
SENTRY_ENV=staging

# EDI Configuration
EDI_MODE=sandbox

# Network Security
# Comma-separated list of allowed outbound domains (e.g., api.partner.com,secure.endpoint.com)
OUTBOUND_ALLOWLIST=

# Environment
NODE_ENV=staging

# HTTPS Configuration
HTTPS_ENABLED=true
# Set to true in production to enforce HTTPS redirects
FORCE_HTTPS=true

# Secure Cookie Settings
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict
# Session timeout in milliseconds (default: 30 minutes)
SESSION_TIMEOUT=1800000

# CSP (Content Security Policy) Settings
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# Rate Limiting
RATE_LIMIT_ENABLED=true
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Object Storage (if using S3)
# S3_BUCKET_NAME=
# S3_REGION=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Additional Security Headers
HSTS_ENABLED=true
# HSTS max age in seconds (default: 1 year)
HSTS_MAX_AGE=31536000

# MFA Configuration
MFA_ENABLED=true
MFA_ISSUER=MedLink Claims Hub Staging

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_FLAG_NEW_UI=false
FEATURE_FLAG_ADVANCED_ANALYTICS=false
FEATURE_FLAG_BULK_OPERATIONS=false

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# CORS Settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Email Configuration (if needed)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_SECURE=
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=

# Backup Configuration
BACKUP_ENABLED=false
# BACKUP_SCHEDULE=0 2 * * *

# Debug (NEVER enable in production)
DEBUG=false