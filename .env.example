# Environment Configuration for MedLink Claims Hub

# Application
NODE_ENV=production
PORT=5000

# Database (Required)
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication (Required for Replit deployment)
REPLIT_DB_URL=
REPL_ID=
REPL_SLUG=

# Object Storage (Optional - falls back to local storage)
# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=
GOOGLE_APPLICATION_CREDENTIALS=

# S3-Compatible Storage (AWS S3, Cloudflare R2)
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=auto

# Object Storage Configuration (Required for deployment)
PUBLIC_OBJECT_SEARCH_PATHS=/api/files/public
PRIVATE_OBJECT_DIR=private

# Local Storage Fallback
STORAGE_DIR=./uploads

# Session Security (Auto-generated if not provided)
SESSION_SECRET=

# API Keys (Optional)
TELUS_API_KEY=
CDANET_API_KEY=

# Monitoring (Optional)
ENABLE_METRICS=true
LOG_LEVEL=info

# Push Notifications (Optional - auto-generated if not provided)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=

# SSO Integration (Optional)
SSO_SHARED_SECRET=
ALLOWED_ORIGINS=

# Security (Optional)
CORS_ORIGIN=
ALLOWED_HOSTS=