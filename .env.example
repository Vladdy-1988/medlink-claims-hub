# Database Configuration
# Example for Neon (recommended for production)
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/medlink_claims_hub?sslmode=require

# Example for local PostgreSQL development
# DATABASE_URL=postgresql://username:password@localhost:5432/medlink_claims_hub

# Authentication
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Replit Configuration (automatically set in Replit environment)
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.app

# Object Storage (automatically set in Replit environment)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id
PRIVATE_OBJECT_DIR=/your-bucket/private
PUBLIC_OBJECT_SEARCH_PATHS=/your-bucket/public,/your-bucket/assets

# Optional: Storage Directory for Local Development
STORAGE_DIR=./storage

# Optional: File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_CLAIM=5

# Optional: API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging Level
LOG_LEVEL=info

# Optional: CORS Origins for Development
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Production Settings (set these in production environment)
NODE_ENV=production
PORT=5000

# Insurance Integration Settings
# Telus eClaims API
TELUS_API_URL=https://api.telus.com/eclaims
TELUS_API_KEY=your-telus-api-key
TELUS_CLIENT_ID=your-telus-client-id

# CDAnet Integration
CDANET_API_URL=https://api.cdanet.ca
CDANET_CLIENT_ID=your-cdanet-client-id
CDANET_CLIENT_SECRET=your-cdanet-client-secret

# Portal Integration Settings
PORTAL_API_BASE_URL=https://portal.example.com/api
PORTAL_CLIENT_ID=your-portal-client-id
PORTAL_CLIENT_SECRET=your-portal-client-secret

# Security Settings
# JWT Secret for API tokens (different from session secret)
JWT_SECRET=your-jwt-secret-for-api-tokens

# Encryption key for sensitive data at rest
ENCRYPTION_KEY=your-32-character-encryption-key

# HTTPS Settings (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@yourapp.com

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_ID=your-analytics-tracking-id

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_FILE_UPLOAD=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# Development Settings
DEBUG=false
MOCK_INSURANCE_APIS=false