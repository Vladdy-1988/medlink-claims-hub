# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/medlink_claims"
PGHOST="localhost"
PGPORT="5432"
PGUSER="postgres"
PGPASSWORD="password"
PGDATABASE="medlink_claims"

# Authentication Secrets  
SESSION_SECRET="your-secure-session-secret-here"
JWT_SECRET="your-jwt-secret-here"

# SSO Configuration (for marketplace integration)
SSO_SHARED_SECRET="your-shared-secret-for-sso"
ALLOWED_ORIGINS="https://mymedlink.ca,https://*.replit.dev"

# Push Notifications (generated automatically)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Object Storage (if configured)
DEFAULT_OBJECT_STORAGE_BUCKET_ID="your-bucket-id"
PUBLIC_OBJECT_SEARCH_PATHS="/bucket/public"
PRIVATE_OBJECT_DIR="/bucket/.private"
STORAGE_DIR="/tmp/storage"

# Development Settings
NODE_ENV="development"
REPLIT_DOMAINS="your-replit-domain.replit.dev"

# EDI Connector Configuration
# Common
CONNECTORS_MODE="sandbox"  # sandbox | live
CONNECTOR_LOG_LEVEL="info"  # debug|info|warn|error
JOB_CONCURRENCY=3

# CDAnet / ITRANS
ITRANS_ENABLED=false
ITRANS_OFFICE_NUMBER=""
ITRANS_PROVIDER_NUMBER=""
ITRANS_CERT_PATH=""
ITRANS_CERT_PASSPHRASE=""
ITRANS_ENDPOINT="https://sandbox.itrans.example"

# TELUS eClaims  
ECLAIMS_ENABLED=false
ECLAIMS_CLIENT_ID=""
ECLAIMS_CLIENT_SECRET=""
ECLAIMS_ENDPOINT="https://sandbox.eclaims.example"